# Weave Development Configuration
# Top-level CLI and development workflow configuration

project: insight-mesh
version: "1.0.0"

# Domain-Context-Tool hierarchy
hierarchy:
  domains_path: ".weave/domains/"
  contexts_path: ".weave/contexts/"
  tools_path: ".weave/tools/"
  
# Runtime behavior
runtime:
  auto_inject_context: true
  trace_domains: true
  permission_enforcement: true
  
# CLI shortcuts
aliases:
  ctx: "weave context"
  dom: "weave domain"
  tool: "weave tool"
  
# Development workflow
dev:
  hot_reload: true
  debug_mode: true
  log_level: "DEBUG"
  
# Integration with existing config.json
extends: ".weave/config.json"

# Default user context for development
default_user:
  id: "dev-user"
  roles: ["admin", "analyst"]
  permissions: ["*"] 